<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Drop Calculator"
            android:layout_width="144dp"
            android:layout_height="39dp" android:layout_alignParentTop="true" android:layout_marginTop="22dp"
            android:layout_centerHorizontal="true" android:id="@+id/textView" android:textSize="20sp"
            android:textStyle="bold" android:textColor="#111111"
            android:gravity="center_horizontal"

    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Odległość [m]"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true" android:layout_marginTop="74dp" android:layout_centerHorizontal="true"
            android:id="@+id/meters" android:textColor="#333333"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Opad [cm]"
            android:gravity="center_horizontal"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:layout_marginTop="134dp"
            android:id="@+id/centy" android:textColor="#333333"/>
    <Button
            android:text="Oblicz"
            android:layout_width="140dp"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="188dp"
            android:layout_centerHorizontal="true" android:id="@+id/count" android:textColor="#222222"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="339dp"
            android:layout_height="161dp" android:layout_alignParentTop="true" android:layout_marginTop="351dp"
            android:layout_centerHorizontal="true" android:id="@+id/wynik" android:textColor="#222222"/>

    <TextView
            android:text="SJS - Wszelkie Prawa Zastrzeżone"
            android:layout_width="328dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:id="@+id/footer" android:textColor="#111111"/>
    <RadioGroup
            android:id="@+id/radio"
            android:layout_width="231dp"
            android:layout_height="106dp" android:layout_below="@+id/count"
            android:layout_centerHorizontal="true">
        <RadioButton
                android:text="MILS (1/10)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mils" android:textColor="#222222" android:layout_weight="1"/>
        <RadioButton
                android:text="MOA (1/4)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/moa4" android:textColor="#222222" android:layout_weight="1"/>
        <RadioButton
                android:text="MOA (1/6)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/moa6" android:textColor="#222222" android:layout_weight="1"/>
        <RadioButton
                android:text="MOA (1/8)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/moa8" android:textColor="#222222" android:layout_weight="1"/>
    </RadioGroup>
</RelativeLayout>
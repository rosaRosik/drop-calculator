<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Dane"
            android:layout_width="144dp"
            android:layout_height="39dp" android:layout_alignParentTop="true" android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true" android:id="@+id/textView" android:textSize="20sp"
            android:textStyle="bold" android:textColor="#111111"
            android:gravity="center_horizontal"

    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Odległość [m]"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/meters" android:textColor="#333333" android:layout_below="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Opad [cm]"
            android:gravity="center_horizontal"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:id="@+id/centy" android:textColor="#333333" android:layout_alignParentTop="true"
            android:layout_marginTop="105dp"/>
    <Button
            android:text="Oblicz"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:id="@+id/count" android:textColor="#222222"
            android:textStyle="bold" android:layout_marginBottom="246dp" android:layout_alignParentBottom="true"/>
    <TextView
            android:layout_width="339dp"
            android:layout_height="161dp"
            android:layout_centerHorizontal="true" android:id="@+id/wynik" android:textColor="#222222"
            android:textSize="18sp" android:lineSpacingExtra="8sp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="68dp"/>

    <RadioButton
            android:text="MILS (1/10)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mils" android:textColor="#222222"
            android:layout_weight="1" android:layout_alignParentStart="true"
            android:layout_marginStart="70dp" android:layout_alignParentTop="true" android:layout_marginTop="182dp"
            android:layout_marginLeft="70dp" android:layout_alignParentLeft="true"/>
    <RadioButton
            android:text="MOA (1/4)"
            android:layout_width="109dp"
            android:layout_height="wrap_content" android:id="@+id/moa4" android:textColor="#222222"
            android:layout_weight="1"
            android:layout_alignStart="@+id/mils" android:layout_alignParentTop="true"
            android:layout_marginTop="225dp" android:layout_alignLeft="@+id/mils"/>
    <RadioButton
            android:text="MOA (1/6)"
            android:layout_width="109dp"
            android:layout_height="wrap_content" android:id="@+id/moa6" android:textColor="#222222"
            android:layout_weight="1"
            android:layout_alignStart="@+id/moa8" android:layout_alignTop="@+id/mils"
            android:layout_alignLeft="@+id/moa8"/>
    <RadioButton
            android:text="MOA (1/8)"
            android:layout_width="110dp"
            android:layout_height="wrap_content" android:id="@+id/moa8" android:textColor="#222222"
            android:layout_weight="1"
            android:layout_marginEnd="72dp" android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/moa4" android:layout_marginRight="72dp"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="210dp"
            android:gravity="center_horizontal"
            android:layout_height="53dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp" android:layout_centerHorizontal="true" android:id="@+id/poprawka"
            android:textStyle="bold" android:textSize="24sp" android:textColor="#000000"/>

</RelativeLayout>